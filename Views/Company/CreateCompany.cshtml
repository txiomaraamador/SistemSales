@model CompanyModel
@{
    ViewData["Title"] = "CreateCompany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        Agregar una Empresa
    </div>
    <div class="card-body">
        <form asp-action="CreateCompany" asp-controller="Company" method="post">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Name" type="text" class="form-control">
                <spam asp-validation-for="Name" class="text-danger"></spam>
            </div>
            <div class="mb-3">
                <label class="form-label">Direccion</label>
                <input asp-for="Address" type="text" class="form-control">
                <spam asp-validation-for="Address" class="text-danger"></spam>
            </div>
            <div class="mb-3">
                <label class="form-label">Telefono</label>
                <input asp-for="Phone" type="text" class="form-control">
                <spam asp-validation-for="Phone" class="text-danger"></spam>
            </div>

            <button type="submit" class="btn btn-primary">Agregar</button>
            <a asp-action="ShowCompanys" asp-controller="Company" class="btn btn-primary">Volver a la lista</a>
        </form>
    </div>
</div>