@model List<SupplierModel>
@{
    ViewData["Title"] = "ShowSuppliers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
        <h1 class="display-10">Listado de Proveedores</h1>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a asp-action="CreateSupplier" asp-controller="Supplier" class="btn btn-success">Crear nuevo</a>
            <form action="{{ route('searchp') }}" method="GET" class="d-flex" role="search">
                <input type="search" name="query" placeholder="Buscar..." class="form-control me-2">
                <button class="btn btn-outline-warning" type="submit">Buscar</button>
            </form>
        </div>
    </div>
</nav>

<div class="card">
    <div class="card-body">

<table class="table table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th></th>
                </tr>
            </thead>
    <tbody class="table-group-divider">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Address</td>
                        <td>@item.Phone</td>
                        <td>
                            <a asp-action="EditSupplier" asp-controller="Supplier" class="btn btn-primary btn-sm" asp-route-IdSupplier="@item.IdSupplier">Editar</a>
                    <a asp-action="DeleteSupplier" asp-controller="Supplier" class="btn btn-danger btn-sm" asp-route-IdSupplier="@item.IdSupplier">Eliminar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

</div>
</div>